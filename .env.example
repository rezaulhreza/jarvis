# Jarvis Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Telegram Bot (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=

# OpenAI API (optional, for fallback)
OPENAI_API_KEY=

# Weather API (get from openweathermap.org)
OPENWEATHER_API_KEY=

# Google Calendar (OAuth credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Notion Integration
NOTION_API_KEY=

# GitHub Personal Access Token
GITHUB_TOKEN=


ELEVEN_LABS_API_KEY=

# ===== Authentication =====
# Enable user authentication (login/register)
JARVIS_AUTH_ENABLED=false

# Require email verification before login (only applies when auth is enabled)
# Set to false to skip email verification on registration
JARVIS_EMAIL_VERIFICATION=false

# App URL (used in email links)
APP_URL=http://localhost:7777

# SMTP settings (required if email verification is enabled)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# OAuth providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===== General =====
# Custom data directory (default: ~/.jarvis)
# JARVIS_DATA_DIR=